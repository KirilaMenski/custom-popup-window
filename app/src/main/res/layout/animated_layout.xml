    android:gravity="bottom"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/first"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@android:drawable/arrow_down_float" />

    <ImageView
        android:id="@+id/second"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@android:drawable/arrow_down_float" />

    <ImageView
        android:id="@+id/third"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@android:drawable/arrow_down_float" />

    <ImageView
        android:id="@+id/fourth"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@android:drawable/arrow_down_float" />

    <ImageView
        android:id="@+id/fifth"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@android:drawable/arrow_down_float" />

</LinearLayout>